
<center><h1>Add a Guitar to an Auction</h1>

<%= link_to 'All Auctions', auctions_path, class:'button' %>
<%= link_to 'All Guitars', guitars_path, class:'button' %>
<%= link_to 'Add an Auction', auction_new_path, class:'button' %>

<%= form_for @guitar do |f| %>
    

    <%= f.label :brand %>
    <%= f.text_field :brand %>
    
    <%= f.label :model %>
    <%= f.text_field :model %>

    <%= f.label :year %>
    <%= f.text_field :year %>

    <%= f.label :price %>
    <%= f.text_field :price %>
   
  
    <% if @auction %>
    <p> Auction: <%= @auction.title %> </p>
    <%= f.hidden_field :auction_id %>
    <% else %>
    <%= f.label :auction_id, "Select an Auction:" %>
    <%= f.collection_select :auction_id, Auction.all, :id, :title,
    include_blank: true %>

    
    <% end %>  

      
       

    <%= f.submit%>
    

    <% end %>  
